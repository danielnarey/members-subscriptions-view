/* A FLEX CONTAINER WITH GENEROUS MARGINS AND OPTIONAL ALIGNMENT */
/* REPLACES TAILWIND'S RESPONSIVE CONTAINER */

.container
  @apply w-full
  @apply max-w-10c

.container:not(.align-left)
  @apply mx-auto

.container.align-right
  @apply ml-auto


